{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{> "header"}}

{{! The main content area on the homepage }}
<main id="content" class="content clearfix" role="main">

    
    <div id="articles">
        <h1>Events@ІТ КПІ</h1>
        {{#if archive}}
            <h2>Попередні івенти</h2>
        {{else}}
            <a href="/events/archive/">Попередні івенти</a>
        {{/if}}

        {{#each events}}
        <a class="article-link" href="/events/event/{{id}}/">
            <article class="box is-link post">
                {{#if image_url}}
                    <section class="post-image" style="background-image:url({{image_url}})"></section>
                {{/if}}
                <header class="post-header">
                    <h2 class="post-title">{{{title}}}</h2>
                </header>
                <section class="post-excerpt">
                    <p>{{{excerpt words="26"}}}...</p>
                    <br />
                    <p>{{{social}}}</p>
                    <p><i>Натисніть щоб прочитати детальніше</i></p>
                </section>

                <footer class="post-meta">
                    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD.MMMM.YYYY"}}</time>
                </footer>
            </article>
        </a>
        {{/each}}

        {{! Previous/next page links - displayed on every page }}
        <nav role="navigation" class="pagination">
            {{#if offset}}
                <a href="/events{{archive}}/page/{{prev_page}}/" class="newer-posts">← Older Events</a>
            {{/if}}

            <span class="page-number">Page {{page}}</span>

            {{#if has_next}}
                <a href="/events{{archive}}/page/{{next_page}}/" class="older-posts">Older Events →</a>
            {{/if}}

        </nav>

    </div>

    <div id="sidebar">
        {{> "sidebar"}}
    </div>

</main>